<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card shadow-sm">
        <div class="card-header text-center">
          <h2>Créer un nouvel événement</h2>
        </div>
        <div class="card-body">
          <%= form_with(model: @event, local: true) do |f| %>
            <% if @event.errors.any? %>
              <div class="alert alert-danger">
                <h4>Erreurs :</h4>
                <ul>
                  <% @event.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.label :title, "Titre de l'événement" %>
              <%= f.text_field :title, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :description, "Description" %>
              <%= f.text_area :description, class: "form-control", rows: 4 %>
            </div>

            <div class="form-group">
              <%= f.label :start_date, "Date et heure de début" %>
              <%= f.datetime_select :start_date, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :duration, "Durée (minutes)" %>
              <%= f.number_field :duration, class: "form-control", min: 5, step: 5 %>
            </div>

            <div class="form-group">
              <%= f.label :price, "Prix (€)" %>
              <%= f.number_field :price, class: "form-control", min: 1, max: 1000 %>
            </div>

            <div class="form-group">
              <%= f.label :location, "Lieu" %>
              <%= f.text_field :location, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.submit "Créer l'événement", class: "btn btn-primary mt-3" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
