<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card bg-dark text-white shadow-lg border-primary">
        <div class="card-header text-center border-primary">
          <h2 class="text-primary neon-text">Créer un nouvel événement</h2>
        </div>
        <div class="card-body">
          <%= form_with(model: @event, local: true, class: "needs-validation") do |f| %>

            <% if @event.errors.any? %>
              <div class="alert alert-danger">
                <h4 class="alert-heading">Erreurs :</h4>
                <ul class="mb-0">
                  <% @event.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :title, "Titre de l'événement", class: "form-label text-primary neon-text" %>
              <%= f.text_field :title, class: "form-control bg-secondary text-white border-primary neon-input" %>
            </div>

            <div class="mb-3">
              <%= f.label :description, "Description", class: "form-label text-primary neon-text" %>
              <%= f.text_area :description, class: "form-control bg-secondary text-white border-primary neon-input", rows: 4 %>
            </div>

            <div class="mb-3">
              <%= f.label :start_date, "Date et heure de début", class: "form-label text-primary neon-text" %>
              <%= f.text_field :start_date, class: "form-control bg-secondary text-white border-primary neon-input" %>
            </div>

            <div class="mb-3">
              <%= f.label :duration, "Durée (minutes)", class: "form-label text-primary neon-text" %>
              <%= f.number_field :duration, class: "form-control bg-secondary text-white border-primary neon-input", min: 5, step: 5 %>
            </div>

            <div class="mb-3">
              <%= f.label :price, "Prix (€)", class: "form-label text-primary neon-text" %>
              <%= f.number_field :price, class: "form-control bg-secondary text-white border-primary neon-input", min: 1, max: 1000 %>
            </div>

            <div class="mb-3">
              <%= f.label :location, "Lieu", class: "form-label text-primary neon-text" %>
              <%= f.text_field :location, class: "form-control bg-secondary text-white border-primary neon-input" %>
            </div>

            <div class="d-grid">
              <%= f.submit "Créer l'événement", class: "btn btn-primary btn-lg mt-3 neon-glow" %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
