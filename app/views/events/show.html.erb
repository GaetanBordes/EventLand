<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card shadow-sm">
        <div class="card-header text-center">
          <h1 class="display-4"><%= @event.title %></h1>
        </div>
        <div class="card-body">
          <!-- Description de l'événement -->
          <p><strong>Description :</strong> <%= @event.description %></p>
          
          <!-- Date de début de l'événement -->
          <p><strong>Date de début :</strong> <%= @event.start_date.strftime("%B %d, %Y %H:%M") %></p>
          
          <!-- Date de fin de l'événement (méthode d'instance) -->
          <p><strong>Date de fin :</strong> <%= @event.end_date.strftime("%B %d, %Y %H:%M") %></p>
          
          <!-- Lieu de l'événement -->
          <p><strong>Lieu :</strong> <%= @event.location %></p>
          
          <!-- Prix de l'événement -->
          <p><strong>Prix :</strong> <%= @event.price %> €</p>
          
          <!-- Nombre d'inscrits -->
          <p><strong>Nombre d'inscrits :</strong> <%= @event.attendances.count %></p>
          
          <!-- Créateur de l'événement (email) -->
          <p><strong>Créateur :</strong> <%= @event.admin.email %></p>
        </div>
        <div class="card-footer text-center">
          <%= link_to 'Retour à la liste des événements', events_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
</div>
